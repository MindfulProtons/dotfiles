# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "volume master"
order += "weather_owm"
order += "mpd_status"
order += "arch_updates"
order += "frame cpu"
order += "tztime local"


weather_owm {
	api_key = "INSERTYOUROWNAPIKEYHERE"
	format = 'Weather: {temperature}, {description}'
	format_temperature = '{current:.0f}°{unit}'
}

mpd_status {
	cache_timeout = 0.1
	color_play = '#FFFFFF'
	color_pause = '#FFFFFF'
	color_stop = '#FFFFFF'
	state_play = ">"
	state_stop = ".."
	state_pause = "||"
}

frame cpu {
      format_separator = ''

      sysdata {
        format = "CPU: {cpu_used_percent}%, "
	zone = "Tdie"
	}

      lm_sensors {
      	format_chip = '{format_sensor}'
    	format_sensor = '{input:g}°C'
    	chips = ['k10temp-pci-00c3']
    	sensors = ['tdie']
    	}
}

tztime local {
        format = "%A, %B %d %H:%M"
}

volume master {
       device = "default"
       mixer = "Master"
}